@model EmployeeDto

@{

}

<div class="row">
    <div class="col-md-8 mx-auto rounded border p-4" style="background-color: #f9f9f9;">
        <h2 class="text-center mb-5" style="font-weight: bold; color: #333;">New Employee</h2>
        <form method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" style="font-weight: bold; color: #333;">First Name</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Fname" />
                    <span asp-validation-for="Fname" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" style="font-weight: bold; color: #333;">Last Name</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Lname" />
                    <span asp-validation-for="Lname" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" style="font-weight: bold; color: #333;">Email Id</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="EmailId" />
                    <span asp-validation-for="EmailId" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" style="font-weight: bold; color: #333;">Phone Number</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="PhoneNumber" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" style="font-weight: bold; color: #333;">Address</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="Address" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" style="font-weight: bold; color: #333;">Join Date</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="JoinDate" />
                    <span asp-validation-for="JoinDate" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label" style="font-weight: bold; color: #333;">Image</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="ImageFile" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Home" asp-action="Index" role="button">
                        Cancel
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>
