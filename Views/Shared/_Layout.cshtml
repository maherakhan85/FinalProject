<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Employee Manager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/FinalProject.styles.css" asp-append-version="true" />
    <style>
        /* Make header thinner */
        header {
            background-color: #f8f9fa; /* Light gray background */
            padding: 5px 0; /* Reduce the header's padding */
        }

        /* Navbar styling */
        .navbar {
            padding: 5px 15px; /* Reduce padding inside navbar */
            font-size: 1rem; /* Adjust font size for a cleaner look */
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.25rem;
            color: #007bff;
        }

        .navbar-nav .nav-link {
            color: #333; /* Dark color for text */
            transition: color 0.3s ease; /* Smooth transition for hover effect */
        }

            .navbar-nav .nav-link:hover {
                color: #007bff; /* Change color on hover */
            }

        /* Adjust the footer */
        footer {
            background-color: #f8f9fa; /* Light footer background */
            padding: 10px 0;
            font-size: 0.9rem; /* Slightly smaller text */
            text-align: center;
        }

            footer a {
                color: #007bff;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }

        /* Main content section */
        main {
            padding-top: 20px; /* Ensure there's space below the navbar */
        }

        /* Optional: Add some shadow to the header */
        .navbar {
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Light shadow for depth */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Employee Manager</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">About</a>
                        </li>
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div >
            Created By- Mahera Khatoon
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
